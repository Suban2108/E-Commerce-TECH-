  <link href="cart.css" rel="stylesheet" type="text/css">
</head>

<body>
  <!-- Navbar -->
  <div>
    <nav class="navbar  navbar-light navbar-expand-lg fixed-top" style="background-color:#202D42;">
      <a class="navbar-brand" href="/index_after_signedin"><img src="images/Logo.png" alt="I.S.Tech"
          style="width:70px ;height:70px"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/index">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#Our_block">About</a>
          </li>
        </ul>
        <input type=" text" id="twotabsearchtextbox" placeholder="Search" class="nav-input nav-progressive-attribute">
        <div class="mx-1">
          <button class="btn btn-outline-warning">Search</button>
          <a href="/logout"><button class="btn btn-outline-danger">Logout</button></a>
          <a href="/cart"><button class="btn btn-outline-success">Your Cart</button></a>
        </div>
      </div>
    </nav>
  </div>

  <div id="space"></div>

  <div class="mycart">
    <div class="img">
     <img src="images/{{product.img3}}" class="images">
    </div>
    <div class="cart-content">
      <div class="P_name">{{product.name}}</div>
      <div class="price"><strong class="price">Price :   Rs</strong> {{product.price}}</div>
      <a href="/buynow"><button class="btn1"><strong>Buy Now</strong></button></a>
      <button class="btn1" onclick="theelement.remove()"><strong> Delete</strong></button>
    </div>
    <div class="cart-add">
      <button class="btn2" id="subtract">-</button>
      <div id="count">1</div>
      <button class="btn2" id="addit">+</button>
    </div>
  </div>
  <script>
    let button_sub = document.getElementById("subtract");
    let button_add = document.getElementById("addit");
    let count_val = document.getElementById("count");
    let theelement = document.getElementsByClassName("mycart")[0];



    button_sub.onclick = () => {
      if (parseInt(count.innerHTML) == 0) {
        theelement.remove();
      }
      else
        count_val.innerHTML--;
    };


    button_add.addEventListener("click", () => {
      count.innerHTML = parseInt(count.innerHTML) + 1;
    });
  </script>
</body>

</html>